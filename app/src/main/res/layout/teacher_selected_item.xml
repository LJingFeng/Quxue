<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/check_img"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_choose"/>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="1dp"
    android:id="@+id/card"
    android:layout_width="160dp"
    android:layout_margin="2dp"
    android:layout_height="256dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/teacher_header"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="159.7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView

            android:id="@+id/teacer_detail"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:maxLines="3"
            android:layout_width="144dp"
            android:layout_height="48dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RatingBar
            android:layout_marginTop="6dp"
            android:id="@+id/teahcer_star_level"
            android:rating="3.5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:progressTint="#FFFFAC00"
            android:numStars="5"></RatingBar>
            <TextView

                android:text="3.5"
                android:textColor="#FFFFAC00"
                android:id="@+id/teacher_score"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>