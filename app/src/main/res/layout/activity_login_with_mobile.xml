<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_2_02">

    <ImageView
        android:id="@+id/alpha_set"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layout_centerInParent="true" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_with_mobile_layout"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:text="使用手机登录"
        android:textColor="#FFFFFFFF"
        android:textSize="32sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/telenumber_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <EditText
            android:focusable="true"
            android:textColor="#CCFFFFFF"
            android:theme="@style/MyEditText"
            android:id="@+id/telephone_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入手机号"
            android:textColorHint="#CCFFFFFF"
            android:textSize="20sp" />
            <Button
                android:background="#00000000"
                android:id="@+id/message_send"
                android:textColor="@color/smssdk_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/code_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:focusable="true"
                android:textColor="#CCFFFFFF"
                android:theme="@style/MyEditText"
                android:id="@+id/zhl_smscode_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="输入验证码"
                android:textColorHint="#CCFFFFFF"
                android:textSize="20sp" />
            <Button
                android:id="@+id/reget_code"
                android:background="#00000000"
                android:textColor="@color/smssdk_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新获取验证码"/>
        </LinearLayout>
    <Button
        android:id="@+id/telephone_login_with_password"
        android:textColor="@color/smssdk_white"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="使用密码登陆"
        android:layout_gravity="right"
        android:background="#00000000"/>

    </LinearLayout>
    <TextView
        android:id="@+id/show_ps_wrong"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <Button
        android:enabled="true"
        android:id="@+id/mobile_login_in"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape"
        android:text="登录"
        android:visibility="visible"
        android:textColor="#FFFFFFFF" />


    <Button
        android:id="@+id/login_with_qq"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:drawableLeft="@drawable/ic_qq_white"
        android:gravity="center_vertical"
        android:paddingLeft="130dp"
        android:text="QQ登录 "
        android:textColor="#FFFFFFFF" />
</LinearLayout>
</RelativeLayout>